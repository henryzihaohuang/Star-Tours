<!DOCTYPE html>
<html>
  <head>
    <title>The Force Fan Club</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="google-site-verification" content="XKKSv6oK4H0zxxgCwvwOtPVVk2QfPQalV4eP-nCIXIs" />
    <link href='https://fonts.googleapis.com/css?family=Abel' rel='stylesheet' type='text/css'>
    
    <%= stylesheet_link_tag 'application', media: 'all'%>
    <%= csrf_meta_tags %>
    <%= javascript_include_tag 'application' %>


    <% if current_user %>
      <script>
      window.currentUser = {
        "id": <%= current_user.id %>,
        "firstName": "<%= current_user.first_name %>",
        "lastName": "<%= current_user.last_name %>",
        "email": "<%= current_user.email %>",
        "imageUrl": "<%= current_user.image_url %>",
        "favorites": "<%= current_user.favorite_character_id %>"
      };
      </script>
    <% end %>

  </head>
  <body>

    <%= yield %>

  </body>
</html>
